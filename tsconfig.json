{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "ES5",
		"module": "esnext",
		"lib": ["es5","DOM"], 
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "dist",
		"strict": true,                           /* Enable all strict type-checking options. */
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"esModuleInterop": true, 
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
